<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zenith_MAUI.Components.PlaylistComponent"
             x:Name="Self">
    
    <VerticalStackLayout Margin="30" BindingContext="{x:Reference Self}">
        <Border Padding="20">
            <StackLayout>
                <Label Text="{Binding Name}" FontSize="20" FontAttributes="Bold" />

                <Label FontSize="16" Text="{Binding CreatedAt}" FontAttributes="Italic" />

                <FlexLayout Margin="0,15,0,0" AlignContent="Center">
                    <Label Text="Tracks count: " />
                    <Label Text="{Binding TracksCount}" Margin="5,0,0,0" FontAttributes="Bold" FontSize="16" />
                </FlexLayout>


                <Button Margin="0,20,0,0"  FontSize="Micro" Text="Delete" />
            </StackLayout>
        </Border>


        </VerticalStackLayout>
</ContentView>
